<Window x:Class="QuizGameProject.Window3"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuizGameProject"
        mc:Ignorable="d"
        Title="Quiz Game" Height="450" Width="800"
        MinHeight="400" MinWidth="650">

    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="141*"/>
            <ColumnDefinition Width="518*"/>
            <ColumnDefinition Width="141*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="305*"/>
            <RowDefinition Height="64*"/>
            <RowDefinition Height="29*"/>
            <RowDefinition Height="64*"/>
            <RowDefinition Height="29*"/>
            <RowDefinition Height="64*"/>
            <RowDefinition Height="29*"/>
            <RowDefinition Height="64*"/>
            <RowDefinition Height="64*"/>
        </Grid.RowDefinitions>

        <!-- Background -->
        <Grid Grid.RowSpan="9" Grid.ColumnSpan="3" Background="DarkSlateGray"/>

        <!-- Content -->
        <TextBlock Grid.Column="1" Text="Game Over!" FontSize="36" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold" Height="48" Width="236" TextAlignment="Center"/>

        <TextBlock Grid.Column="1" Grid.Row="1" Name="QuestionsAnsweredText" Text="Questions answered: " FontSize="30" HorizontalAlignment="Center" VerticalAlignment="Center" Height="48" Width="473" TextAlignment="Center"/>

        <TextBlock Grid.Column="1" Grid.Row="3" Name="PercentageCorrectText" Text="Num Correct: " FontSize="30" HorizontalAlignment="Center" VerticalAlignment="Center" Height="48" Width="473" TextAlignment="Center"/>

        <TextBlock Grid.Column="1" Grid.Row="5" Name="OverallPercentageCorrectText" Text="Overall Percentage correct: " FontSize="30" HorizontalAlignment="Center" VerticalAlignment="Center" Height="48" Width="473" TextAlignment="Center"/>

        <TextBlock Grid.Column="1" Grid.Row="7" Name="HighScoreText" Text="High Score: " FontSize="30" HorizontalAlignment="Center" VerticalAlignment="Center" Height="48" Width="473" TextAlignment="Center"/>

        <Button Grid.Column="1" Grid.Row="9" Content="Main Menu" FontSize="20" Margin="0,0,0,0" Click="Main_Menu_Button_Click" Grid.RowSpan="2"/>
    </Grid>
</Window>
