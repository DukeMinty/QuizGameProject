<Window x:Class="QuizGameProject.Window4"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuizGameProject"
        mc:Ignorable="d"
        Title="Quiz Game" Height="450" Width="800"
        MinHeight="400" MinWidth="650">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="28*"/>
            <ColumnDefinition Width="269*"/>
            <ColumnDefinition Width="503*"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.RowSpan="9" Grid.ColumnSpan="3" Background="DarkSlateGray"/>

        <TextBlock Grid.Column="2" Text="Pick Your Category" FontSize="36" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold" Height="58" Width="395" TextAlignment="Center"/>

        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="29*"/>
                <RowDefinition Height="64*"/>
                <RowDefinition Height="29*"/>
                <RowDefinition Height="64*"/>
                <RowDefinition Height="29*"/>
                <RowDefinition Height="64*"/>
                <RowDefinition Height="29*"/>
                <RowDefinition Height="64*"/>
                <RowDefinition Height="29*"/>
            </Grid.RowDefinitions>

            <Button Grid.Row="1" Name="MizzouButton" Content="Mizzou" FontSize="20" Margin="0,1,0,3" Click="Button_Click"/>
            <Button Grid.Row="3" Name="GeoButton" Content="US Geography" FontSize="20" Margin="0,1,0,3" Click="Button_Click"/>
            <Button Grid.Row="5" Name="ProgrammingButton" Content="C# Programming" FontSize="20" Margin="0,1,0,3" Click="Button_Click"/>
            <Button Grid.Row="7" Name="MovieButton" Content="Movies" FontSize="20" Margin="0,1,0,3" Click="Button_Click"/>
        </Grid>
    </Grid>
</Window>
