<Window x:Class="QuizGameProject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuizGameProject"
        mc:Ignorable="d"
        Title="Quiz Game" Height="450" Width="800">
    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20*"/>
            <ColumnDefinition Width="335*"/>
            <ColumnDefinition Width="20*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="61*"/>
            <RowDefinition Height="31*"/>
            <RowDefinition Height="169*"/>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="70*"/>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="70*"/>
            <RowDefinition Height="10*"/>
        </Grid.RowDefinitions>

        <!-- Background -->
        <Grid Grid.RowSpan="8" Grid.ColumnSpan="3" Background="DarkSlateGray"/>

        <!-- Content -->
        <StackPanel Grid.Row="2" Grid.Column="1" Background="AliceBlue"/>
        <TextBlock Grid.Column="1" Text="Quiz Game" FontSize="36" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold" Height="48" Width="184" TextAlignment="Center"/>
        <TextBlock Grid.Column="1" Grid.Row="1" Text="Question #" FontSize="29" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold" Height="48" Width="184" TextAlignment="Center"/>
        
        <!-- Buttons -->
        <Grid Grid.Row="4" Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300*"/>
                <ColumnDefinition Width="10*"/>
                <ColumnDefinition Width="300*"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0" Content="Answer 1" FontSize="20" HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"/>
            <Button Grid.Column="2" Content="Answer 2" FontSize="20" HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"/>
        </Grid>

        <Grid Grid.Row="6" Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300*"/>
                <ColumnDefinition Width="10*"/>
                <ColumnDefinition Width="300*"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0" Content="Answer 3" FontSize="20" HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"/>
            <Button Grid.Column="2" Content="Answer 4" FontSize="20" HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"/>
        </Grid>
    </Grid>
</Window>

